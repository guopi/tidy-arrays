{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "ES2019",
            "ES2017",
            "ES7",
            "ES6",
            "DOM"
        ],
        "declaration": true,
        "downlevelIteration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}