{
    "compilerOptions": {
        "strict": true,
        "target": "ES2021",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "ES2021"
        ],
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "out"
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}